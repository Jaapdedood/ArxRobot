/* CSS file */
@namespace s "library://ns.adobe.com/flex/spark";
@namespace comp "components.*";

/*
//------------------------------
//  Global and Global Classes
//------------------------------
*/

global
{
	chromeColor: #364c61;
	color: #eeeeee;
	focusAlpha: 0.3;
	focusThickness: 1;
	fontFamily: _sans;
	fontSize: 14;
	symbolColor: #000000;
	accentColor: #cc6600;
	downColor: #2b3c4d;
	rollOverColor: #663300;
	selectionColor: #cc6600;
	focusedTextSelectionColor: #cc6600;
}

.colorAccent
{
	color: #cc6600;
}

.colorHead
{
	color: #999999;
}

.colorLight
{
	color: #cccccc;
}

.colorNegative
{
	color: #000000;
}

.colorPositive
{
	color: #ffffff;
}

.textBold
{
	fontWeight: bold;
}

.textHead
{
	fontSize: 18;
	fontWeight: bold;
}

.textLarge
{
	fontSize: 18;
}

.textPlain
{
	fontWeight: normal;
}

.textSmall
{
	fontSize: 12;
}

.textSubhead
{
	fontSize: 16;
	fontWeight: bold;
}

.textSubheadPlain
{
	fontSize: 16;
}

.thinCallout
{
	skinClass: ClassReference("skins.ThinCalloutSkin");
	backgroundColor: #000000;
	backgroundAlpha: 1;
	borderColor: #666666;
	contentBackgroundAppearance: none;
}

.tip
{
	skinClass: ClassReference("skins.TipSkin");
	backgroundColor: #000000;
	backgroundAlpha: 0.6;
	borderColor: #666666;
}

