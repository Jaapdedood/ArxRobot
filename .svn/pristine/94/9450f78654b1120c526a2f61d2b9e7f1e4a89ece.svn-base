/*
//------------------------------
//  Spark
//------------------------------
*/


s|BusyIndicator
{
	symbolColor: #ffffff;
}

s|Label.textConfigGroup
{
	color: #000000;
	fontSize: 24;
	fontWeight: bold;
	paddingLeft: 4;
	paddingRight: 4;
	paddingTop: 4;
	paddingBottom: 4;
	textAlign: left;
	verticalAlign: middle;
}

s|Label.textConfigItem
{
	color: #ffffff;
	fontSize: 18;
	paddingTop: 4;
	paddingBottom: 4;
	verticalAlign: middle;
}

s|LabelItemRenderer
{
	alternatingItemColors: null;
}

s|List
{
	contentBackgroundAlpha: 0;
	contentBackgroundColor: #000000;
}

s|NumericStepper
{
	skinClass: ClassReference("skins.NumericStepperSkin");
	fontSize: 24;
}

s|SkinnableContainer.sBox1
{
	skinClass: ClassReference('skins.Box1Skin');
}

s|SkinnableContainer.sLogin
{
	skinClass: ClassReference('skins.LoginSkin');
}

s|TextArea
{
	contentBackgroundAlpha: 0.6;
	contentBackgroundColor: #000000;
}

s|TextInput
{
	contentBackgroundAlpha: 0.6;
	contentBackgroundColor: #000000;
}

s|TitleWindow
{
	backgroundColor: #333333;
}

s|ToggleSwitch
{
	fontSize: 18;
	accentColor: #cc6600;
}
